{{define "home"}}
{{template "base" .}}
<div class="col-lg-3">
  <div class="agenda">
    <h3>Agenda</h3>
    <br/>
    <br/>
         {{range .Week}}
   <p>{{.}}</p>
    {{end}}
       </table>
    </div>
    </div>

<div class="col-lg-9">
  <h2 class="header">Tasks</h2>
  <br/>
  <br/>
  <div class="content">
    {{.NotSignedIn}}
  </div>
  {{range .tasks}}
  <div class="content">
    <h4 class="header">{{ .Summary}}</h4>
    <div class="taskinline">
      <div class="well well-lg">
        <p class="todostatus">{{.Done}}</p>
        <pre>{{.Content}}</pre>

        <p>{{.Scheduled}}
        </p>
      </div>
      <form action="/edittask" method="post">
        <input type="hidden" value={{.Identifier}} name="taskid" />
        <div class="taskinline">
          <input type="submit"  value="Edit Task" class="btn"/>
        </div>
      </form>
    </div>
  </div>
  <br/>
  {{end}}
   


  <script>$(function(){$('.sidebar').affix();
    $("todostatus").css("background-color","green");});
