{{define "home"}}
{{template "base" .}}
<div class="col-lg-3">
  <div class="agenda">
    <h3><span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>Agenda<span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span></h3>
    <br/>
    <br/>
    {{range .Agenda}}
    <div class="fancydate">
      <p>{{ .FancyDate}}</p>
      </div>
    {{range .Taskslice}}
    <div class="singletask">
    <a href=#{{.Identifier}}>{{.Summary}}</a>
    </div>
    {{end}}
    {{end}}
       </table>
    </div>
    </div>

<div class="col-lg-9">
  <h2 class="header">Tasks</h2>
  <br/>
  <br/>
  <div class="content">
    {{.NotSignedIn}}
  </div>
  {{range .tasks}}
  <div class="content">
    <h4 id={{.Identifier}} class="header">{{ .Summary}}</h4>
    <div class="taskinline">
      <div class="well well-lg">
        <p class="todostatus">{{.Done}}</p>
        <pre>{{.Content}}</pre>
        
        <p>Scheduled: {{.Scheduled}}
        </p>
      </div>
      <form action="/edittask" method="post">
        <input type="hidden" value={{.Identifier}} name="taskid" />
        <div class="taskinline">
          <input type="submit"  value="Edit Task" class="btn btn-primary"/>
        </div>
      </form>
    </div>
  </div>
  <br/>
  {{end}}
   


  <script>$(function(){$('.sidebar').affix();
    $("todostatus").css("background-color","green");});
    </script>
